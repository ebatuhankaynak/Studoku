<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ebk.studoku.ManageLecturesFragment">

    <EditText
        android:id="@+id/manageAddLectureEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/manageAddLectureButton"
        android:text="@string/add_lecture_button"
        android:layout_below="@id/manageAddLectureEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/lecturesTextView"
        android:text="@string/lectures"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_below="@id/manageAddLectureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lecturesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lecturesTextView">
    </ListView>
</RelativeLayout>
