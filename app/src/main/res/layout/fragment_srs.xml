<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ebk.studoku.SrsFragment">

    <!-- todo MAKE LISTVIEW GO WITHOUT SCROLL-->
    <!-- todo ADD DAYS AFTER SRS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/listview_border">
        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="@string/need_review"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/srs_title">
        </TextView>
        <ListView
            android:id="@+id/srs_todayListView"
            android:padding="5dp"
            android:listSelector="#00000000"
            android:divider="@null"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="5dp">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/listview_border">
        <TextView
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="@string/upcoming"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/srs_title">
        </TextView>
        <ListView
            android:id="@+id/srs_upcomingListView"
            android:padding="5dp"
            android:listSelector="#00000000"
            android:divider="@null"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>
    </LinearLayout>
</LinearLayout>
